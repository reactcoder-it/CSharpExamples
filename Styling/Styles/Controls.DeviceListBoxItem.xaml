<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:Styling.Controls">

	<!-- DeviceListBoxItem Style -->
	<Style TargetType="{x:Type Controls:DeviceListBoxItem}">
		<Setter Property="MinHeight" Value="25" />
		<Setter Property="Margin" Value="0" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Controls:DeviceListBoxItem}">
					<StackPanel x:Name="Border" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
						<TextBlock Text="{TemplateBinding Number}" FontSize="28" />
						<ContentPresenter Margin="5,0,0,0" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>