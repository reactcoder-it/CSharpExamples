<Window x:Class="StyleExample.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="StyleExample" Height="300" Width="300">
	
	<Window.Resources>
		
		<Style x:Key="BigFontButtonStyle">
			<Setter Property="Control.FontFamily" Value="Times New Roman" />
			<Setter Property="Control.FontSize" Value="18" />
			<Setter Property="Control.FontWeight" Value="Bold" />
		</Style>
	
	</Window.Resources>

	<StackPanel>
		
		<Button Padding="5" Margin="5" Name="btnCmd" Style="{StaticResource BigFontButtonStyle}">
			A Customized Button
		</Button>
	
		<Button Padding="5" Margin="5" Name="btnCmd1">
			Another Customized Button
		</Button>
	
	</StackPanel>

</Window>